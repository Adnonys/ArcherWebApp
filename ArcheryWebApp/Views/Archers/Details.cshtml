@model ArcheryWebApp.Models.Archer
@{
    ViewData["Title"] = "Chi tiết Archer";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <tr><th>ID</th><td>@Model.ArcherID</td></tr>
    <tr><th>Họ</th><td>@Model.LastName</td></tr>
    <tr><th>Tên</th><td>@Model.FirstName</td></tr>
    <tr><th>Giới tính</th><td>@Model.Gender</td></tr>
    <tr><th>Ngày sinh</th><td>@Model.DOB:dd/MM/yyyy</td></tr>
    <tr><th>Equipment</th><td>@Model.DefaultEquipment?.EquipmentName</td></tr>
    <tr><th>Active</th>
        <td>@(Model.IsActive? "Yes":"No")</td>
    </tr>
</table>

<p>
    <a asp-action="Edit" asp-route-id="@Model.ArcherID" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</p>
