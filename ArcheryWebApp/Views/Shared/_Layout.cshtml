<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - ArcheryApp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <!-- Bootstrap CSS từ CDN -->
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoA6Lg5S6bIHvz4lFf3EN5AyjUiw1yYGVmZVC5V8IQY9C"
        crossorigin="anonymous"
    />
    <!-- Assets Start -->
    <link href=@Html.Raw("https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.css") rel="stylesheet" type="text/css">
    <link href="~/css/assets/select2.min.css" rel="stylesheet" type="text/css"/>
    <link href=@Html.Raw("https://cdnjs.cloudflare.com/ajax/libs/bootstrap-daterangepicker/3.1/daterangepicker.css") rel="stylesheet" type="text/css">
    <link href=@Html.Raw("https://cdnjs.cloudflare.com/ajax/libs/bootstrap-touchspin/4.7.3/jquery.bootstrap-touchspin.css") rel="stylesheet" type="text/css">
    <link href="~/css/assets/flatpickr.min.css" rel="stylesheet" type="text/css"/>
    <script asp-append-version="true" src="~/assets/js/config.js"></script>
    <link href="~/css/assets/app.min.css" rel="stylesheet" type="text/css" id="app-style"/>
    <link href="~/css/assets/icons.min.css" rel="stylesheet" type="text/css"/>
    <!-- Assets End -->

    <!-- ViHT CSS Start -->
    <link href="~/css/multiple-media/video-js.css" rel="stylesheet" type="text/css"/>
    <link href="~/assets/vendor/muitiple-media/css/lightbox.min.css" rel="stylesheet" type="text/css">
    <!-- ViHT CSS End -->

    <!-- Core CSS Start -->
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/css/site_v2.css"/>
    <!-- Core CSS End -->

    <script asp-append-version="true" src="~/css/multiple-media/video.min.js"></script>
    <script asp-append-version="true" src="~/css/multiple-media/lightbox-plus-jquery.min.js"></script>
    <style>
        /* Đảm bảo rằng không overlay lên modal */
        #pinModal {
            z-index: 1060 !important; /* Z-index cao hơn overlay */
        }
        #lock-screen-overlay {
            z-index: 1050 !important;
        }
    </style>
</head>
<body class="container py-4">
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <a class="navbar-brand" href="/">ArcheryApp</a>
    <div class="navbar-nav">
        <a class="nav-link" href="/">My Scores</a>
        <a class="nav-link" href="/ScoreStagings/Create">Record Practice</a>
        <a class="nav-link" href="/Rounds/Details/1">Round Details</a>
        <a class="nav-link" href="/Archers/Index">Archers</a>
    </div>
</nav>
<main>
    @RenderBody()
</main>
@RenderSection("Scripts", required: false)
</body>
</html>
